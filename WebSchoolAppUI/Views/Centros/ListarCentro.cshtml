@model IEnumerable<WebSchoolAppUI.Models.CentrosEducativo>

@{
    ViewData["Title"] = "ListarCentro";
}

<h1>Listar Centro</h1>

<p>
    <a asp-action="CrearCentro">Crear</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoCentro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdDistrito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreadoPor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCreado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModificadoPor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaModificado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdTipoCentro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdDistrito)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreadoPor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaCreado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModificadoPor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaModificado)
                </td>
                <td>
                    <a asp-action="EditarCentros" asp-route-id="@item.IdCentroEducativo">Editar</a> |
                    <a asp-action="Detalles" asp-route-id="@item.IdCentroEducativo">Detalles</a> |
                    <a asp-action="Borrar" asp-route-id="@item.IdCentroEducativo">Borrar</a>
                </td>
            </tr>
         }
    </tbody>
</table>
