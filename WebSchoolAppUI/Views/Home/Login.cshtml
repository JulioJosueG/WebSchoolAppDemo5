@{ Layout = null; }
@model WebSchoolAppUI.ViewModels.UsuarioAuth
<head>
    <link rel="stylesheet" href="~/css/StyleLogin.css">

</head>

<body>
    <div class="wrapper">
        <div>
            <img width="170" src="~/img/Logo.svg" />
        </div>
        <header>Inicio de Sesion</header>
        
        <form action="Login" method="post">
            <div class="field email">
                <div class="input-area">
                    <input id="NombreUsuario" name="NombreUsuario" type="text" placeholder="Usuario">
                    <i class="icon fas fa-envelope"></i>
                    <i class="error error-icon fas fa-exclamation-circle"></i>
                </div>
                <div class="error error-txt">Ingresar Usuario</div>
            </div>
            <div class="field password">
                <div class="input-area">
                    <input id="Contrasena" name="Contrasena" type="password" placeholder="Contraseña">
                    <i class="icon fas fa-lock"></i>
                    <i class="error error-icon fas fa-exclamation-circle"></i>
                </div>
                <div class="error error-txt">Ingresar Contraseña</div>
            </div>
            <div class="pass-txt"><a href="#">Forgot password?</a></div>
            <input asp-action="Login" type="submit" value="Ingresar">
        </form>
    </div>
</body>