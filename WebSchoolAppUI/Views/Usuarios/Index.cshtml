@model IEnumerable<WebSchoolAppUI.ViewModels.UsuarioDistritoVM>

@{
    ViewData["Title"] = "Usuarios";
}
<h1>Usuarios</h1>

<p>
    <a asp-action="Create"  asp-route-id="@User.Claims.FirstOrDefault(c => c.Type == "DistritoId").Value">Crear Nuevo Usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre de Usuario
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personal)
            </th>

            <th>
                Correo
            </th>
            <th>
                Perfil
            </th>
            <th>
                Distrito
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personal)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Perfil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distrito)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.IdUsuario">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdUsuario">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdUsuario">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
