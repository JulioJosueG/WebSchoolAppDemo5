@model WebSchoolAppUI.Models.Estudiante

@{
    ViewData["Title"] = "Delete";
}

<h1>Una vez eliminado no podrá ser recuperado el departamento</h1>

<h3>¿Estás seguro de que deseas eliminarlo?</h3>
<div>
    <h4>Estudiante</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">
            Código de SIGERD
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Idsigerd)
        </dd>
        <dt class = "col-sm-2">
            Fecha de nacimiento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sexo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sexo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdEstudiante" />
        <input type="submit" value="Eliminar" class="btn btn-danger" style="background-color: #dc3545a6;" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
