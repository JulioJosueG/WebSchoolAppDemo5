@model WebSchoolAppUI.Models.Departamento

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Una vez eliminado no podrá ser recuperado el departamento</h1>

<h3>¿Estás seguro de que deseas eliminarlo?</h3>
<div>
    <h4>Departamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Centro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCentroNavigation.Nombre)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdDepartamento" />
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirm-delete">Eliminar</button>
        <div class="modal" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Eliminar</h2>
                    </div>
                    <div class="modal-body">
                        <p>Estas Seguro de Eliminar el registro?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Si, Eliminar</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>        <a asp-action="Index">Volver</a>
    </form>
</div>
