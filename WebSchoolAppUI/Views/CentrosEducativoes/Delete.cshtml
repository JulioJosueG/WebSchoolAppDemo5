@model WebSchoolAppUI.Models.CentrosEducativo

@{
    ViewData["Title"] = "Delete";
}

<h1>Una vez eliminado no podrá ser recuperado el centro educativo</h1>

<h3>¿Seguro que quieres eliminar este archivo?</h3>
<div>
    <h4>Centros Educativo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Fecha de creación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCreado)
        </dd>
        <dt class = "col-sm-2">
            Distrito
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdDistritoNavigation.Codigo)
        </dd class>
        <dt class = "col-sm-2">
            Tipo de centro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdTipoCentroNavigation.IdTipoCentro)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCentroEducativo" />
        <input type="submit" value="Eliminar" class="btn btn-danger" style="background-color: #dc3545a6;" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
