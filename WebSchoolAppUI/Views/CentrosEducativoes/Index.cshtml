@model IEnumerable<WebSchoolAppUI.Models.CentrosEducativo>

@{
    ViewData["Title"] = "Index";
}
<style>
    .ul.pagination {
        display: inline-block;
        padding: 0;
        margin: 0;
    }

    ul.pagination li {
        display: inline;
    }

        ul.pagination li a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
        }

            ul.pagination li a.active {
                background-color: #4CAF50;
                color: white;
            }

            ul.pagination li a:hover:not(.active) {
                background-color: #ddd;
            }
</style>
<h1>Lista de Centros</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>

@using (Html.BeginForm("Index", "CentrosEducativoes", FormMethod.Get))
{
    <p>
        Buscar por nombre: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}


<center>
    <div>
        <table class="table" style="width:100%" border="1">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.IdDistritoNavigation.Codigo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdTipoCentroNavigation.Nombre)
                    </th>

                    <th>
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="border:1px solid black">
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdDistritoNavigation.Codigo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdTipoCentroNavigation.Nombre)
                        </td>
                        <td>

                            <a asp-action="Edit" asp-route-id="@item.IdCentroEducativo">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.IdCentroEducativo">Detalles</a> |
                            <a asp-action="Delete" asp-route-id="@item.IdCentroEducativo">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</center>


