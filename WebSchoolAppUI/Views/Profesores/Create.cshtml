@model WebSchoolAppUI.Models.Profesore

@{
    ViewData["Title"] = "Crear Profesor";
}

<h1>Crear Profesor</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cedula" class="control-label"></label>
                <ejs-maskedtextbox id="Cedula" mask="000-0000000-0" promptChar=" "></ejs-maskedtextbox>
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdAsignatura" class="control-label">Asignatura</label>
                <select asp-for="IdAsignatura" class ="form-control" asp-items="ViewBag.IdAsignatura"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdCentro" class="control-label">Centro</label>
                <select asp-for="IdCentro" class ="form-control" asp-items="ViewBag.IdCentro"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
