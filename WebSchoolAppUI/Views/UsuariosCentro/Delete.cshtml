@model WebSchoolAppUI.Models.Usuario

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar Usuario</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
     
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreUsuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreUsuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Personal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Personal)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoNavigation.Nombre)
        </dd class>
        <dt class = "col-sm-2">
            Perfil
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PerfilNavigation.Nombre)
        </dd class>
        <dt class = "col-sm-2">
            Tipo de Usuario
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoUsuarioNavigation.Nombre)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdUsuario" />
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirm-delete">Eliminar</button>
        <div class="modal" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Eliminar</h2>
                    </div>
                    <div class="modal-body">
                        <p>Estas Seguro de Eliminar el registro?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Si, Eliminar</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>        <a asp-action="Index">Regresar al Indice</a>
    </form>
</div>
